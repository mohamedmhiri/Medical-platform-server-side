{% extends "BenDoctorsBundle::layout.html.twig" %}
{% block title %}
    Gestion des rendez_vous | {{ parent() }}
{% endblock %}
{% block body %}
    <form  action="{{ path('take_appointment') }}" method="POST" class="">
        <div id='external-events'>
            <div id='external-events-listing'>
                <h4>Ajouter rendez-vous</h4>
            </div>
            <p>
            <div class="form-group ">
                <label class="col-md-6 control-label" for="ben_person_familyname">
                    Nom
                </label>
                <div class="col-md-6">
                    <input class="form-control" id="ben_person_familyname" type="text" name="familyname" required="required" maxlength="255">
                </div>
            </div>
            <div class="form-group ">
                <label class="col-md-6 control-label" for="ben_person_firstname">
                    Prenom
                </label>
                <div class="col-md-6">
                    <input class="form-control" id="ben_person_firstname" type="text" name="firstname" required="required" maxlength="255">
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="btn-group">
                            {#<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">#}
                                {##}
                                {#<span class="caret"></span>#}
                            {#</button>#}
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                Date
                                <span class="caret"></span>
                            </button>

                            <ul class="dropdown-menu scrollable-menu" role="menu">
                                {#class="dropdown-menu" aria-labelledby="dropdownMenu1"#}
                                {% for date in prepare %}
                                    <li><a href="#" >{{ date }}</a></li>
                                    <input type="hidden" value="{{ date }}" name="date">
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="dropdown">

            </div>
            </p>
            <div class="form-group">
                <div class="col-sm-offset-6 col-sm-6">
                    <button type="submit" class="btn btn-area"><span class="glyphicon glyphicon-calendar"></span> Validez </button>
                    {#<a href="{{ path('') }}" id="js-delete" class="btn btn-area"><span class="glyphicon glyphicon-calendar"></span> </a>#}
                </div>
            </div>
        </div>    </form>


        <div id='calendar'></div>

{% endblock body %}
